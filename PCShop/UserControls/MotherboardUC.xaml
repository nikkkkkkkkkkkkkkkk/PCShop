<UserControl x:Class="PCShop.UserControls.MotherboardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCShop.UserControls"
             mc:Ignorable="d" 
             Height="100" d:DesignWidth="800" Background="White" Margin="10,10,10,10">
    <UserControl.Effect>
        <DropShadowEffect Color="LightGray" BlurRadius="10" RenderingBias="Quality" ShadowDepth="0" Direction="270"/>
    </UserControl.Effect>
    <Button HorizontalContentAlignment="Stretch" >
        <DockPanel>
            <Image x:Name="image" Source="/Resources/Motherboard.png" Margin="10" HorizontalAlignment="Left"/>
            <StackPanel HorizontalAlignment="Left" Margin="10">
                <TextBlock x:Name="name" FontSize="18" Text="GIGABYTE B550 AORUS ELITE V2" FontWeight="SemiBold"/>
                <TextBlock x:Name="price" FontSize="15" Text="Цена: 17000 ₽"/>
                <TextBlock x:Name="count" FontSize="15" Text=""/>
            </StackPanel>
        </DockPanel>
    </Button>
</UserControl>
